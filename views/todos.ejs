<!DOCTYPE html>
<html>
  <head>
    <title>Todo List</title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
  </head>
  <body>
    <p>
        <form method="post" action="/todos">
          <input type="text" name="name" />
        </form>
    </p>

    <p>Todo list</p>
        <% todos.forEach(function(todo) { %>
          <h3><%= todo.name %> <a href="todos/<%= todo._id %>">Delete</a></h3>
          <h3><%= todo._id %></h3>
        <% }); %>
  </body>
  </html>
